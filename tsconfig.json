{
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ES2023",
      "lib": ["ES2023"],
      "strict": true,
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": false,
      "erasableSyntaxOnly": true,
      "skipLibCheck": true,
      "types": ["node"],
    },
    "include": ["src"],
    "exclude": ["node_modules", "test"]
  }
  